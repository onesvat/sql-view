<!DOCTYPE html>
<html lang="en">

<head>
    {% include 'inc/header.html.twig' %}

    <title>SQLView - Databases</title>
</head>

<body>

<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">SQLView</a>
        </div>
        <!-- /.navbar-header -->

        {% include 'inc/top_nav.html.twig' %}
        <!-- /.navbar-top-links -->

        {% include 'inc/side_nav.html.twig' %}
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">New Database</h1>
            </div>
            <!-- /.col-lg-12 -->

            <div class="col-lg-6">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="dtb_name" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="dtb_name" placeholder="Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="dtb_type" class="col-sm-2 control-label">Type</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="dtb_type" name="dtb_type">
                                <option value="mysql">MySQL</option>
                                <option value="postgresql">PostgreSQL</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="con_host" class="col-sm-2 control-label">Host</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="con_host" placeholder="127.0.0.1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="con_port" class="col-sm-2 control-label">Port</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="con_port" placeholder="3306">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="con_username" class="col-sm-2 control-label">Username</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="con_username" placeholder="root">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="con_password" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="con_password" placeholder="secret">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

{% include 'inc/footer.html.twig' %}
</body>

</html>
