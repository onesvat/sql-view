<!DOCTYPE html>
<html lang="en">

<head>
    {% include 'inc/header.html.twig' %}

    <title>SQLView - Databases</title>
</head>

<body>

{% include 'inc/nav.html.twig' %}

<div id="wrapper">

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Databases
                    <div class="pull-right">
                        <a href="/database/new" class="btn btn-primary">Add New Database</a>
                    </div>
                </h1>
            </div>
            <!-- /.col-lg-12 -->


            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Database</th>
                            <th>Server</th>
                            <th># Queries</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for database in databases %}
                            <tr>
                                <td>{{ database.dtb_name }}</td>
                                <td>{{ database.conn.con_host }}</td>
                                <td>{{ database.queries }}</td>
                                <td>
                                    <a href="/database/edit/{{ database.dtb_id }}" class="btn btn-primary">Edit</a>
                                    <a href="/query/{{ database.dtb_id }}" class="btn btn-primary">Query</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

{% include 'inc/footer.html.twig' %}
</body>

</html>
