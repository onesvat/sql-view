<!DOCTYPE html>
<html lang="en">

<head>
    {% include 'inc/header.html.twig' %}

    <title>SQLView - Databases</title>
</head>

<body>

<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">SQLView</a>
        </div>
        <!-- /.navbar-header -->

        {% include 'inc/top_nav.html.twig' %}
        <!-- /.navbar-top-links -->

        {% include 'inc/side_nav.html.twig' %}
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Databases
                    <div class="pull-right">
                        <a href="/database/new" class="btn btn-primary">Add New Database</a>
                    </div>
                </h1>
            </div>
            <!-- /.col-lg-12 -->


            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>Database</th>
                            <th>Server</th>
                            <th># Queries</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for database in databases %}
                            <tr>
                                <td>{{ database.name }}</td>
                                <td>{{ database.server }}</td>
                                <td>{{ database.queries }}</td>
                                <td>
                                    <a href="/database/edit/{{ database.dtb_id }}" class="btn btn-primary">Edit</a>
                                    <a href="/query/{{ database.dtb_id }}" class="btn btn-primary">Query</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

{% include 'inc/footer.html.twig' %}
</body>

</html>
