<!DOCTYPE html>
<html lang="en">

<head>
    {% include 'inc/header.html.twig' %}
    <title>SQLView - Connections</title>
</head>

<body>

{% include 'inc/nav.html.twig' with {'page': 'connection'} %}

<div id="wrapper">

    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Connections
                        <div class="pull-right">
                            <a href="/connections/new" type="button" class="btn btn-xs btn-primary"
                               aria-label="Left Align">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Connection
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-striped">
                                        <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Server</th>
                                            <th>Database</th>
                                            <th width="80">Health</th>
                                            <th width="120">Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for connection in connections %}
                                            <tr>
                                                <td>{{ connection.cnn_name }}</td>
                                                <td>{{ connection.cnn_host }}</td>
                                                <td>{{ connection.cnn_database }}</td>
                                                <td class="text-center">
                                                    {% if connection.cnn_connection_status %}
                                                        <span class="label label-success">Success</span>
                                                    {% else %}
                                                        <span class="label label-danger">Error</span>
                                                    {% endif %}
                                                    &nbsp;
                                                </td>
                                                <td class="text-center">
                                                    <a href="/connections/edit/{{ connection.cnn_id }}"
                                                       class="btn btn-xs btn-primary">Edit</a>
                                                    <a href="/connections/remove/{{ connection.cnn_id }}"
                                                       class="btn btn-xs btn-danger">Remove</a>

                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-4 -->
        </div>

    </div><!-- /.container -->

</div>
<!-- /#wrapper -->

{% include 'inc/footer.html.twig' %}
</body>

</html>
