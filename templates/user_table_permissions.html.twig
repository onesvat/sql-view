<!DOCTYPE html>
<html lang="en">

<head>
    {% include 'inc/header.html.twig' %}
    <title>SQLView - Dashboard</title>
</head>

<body>

{% include 'inc/nav.html.twig' with {'page': 'users'} %}

<div id="wrapper">

    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Connections
                        <div class="pull-right">
                            <a href="/setting/connection/new" type="button" class="btn btn-xs btn-primary"
                               aria-label="Left Align">
                                Return To Connection
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <form method="post">
                                        <table class="table table-bordered table-hover table-striped">
                                            <thead>
                                            <tr>
                                                <th>Permissions</th>
                                                <th width="250">Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for table in tables %}
                                                <tr>
                                                    <td>
                                                        {{ table }}
                                                    </td>
                                                    <td>

                                                        <a href="/setting/table/give_permission/{{ connection.cnn_user }}/{{ connection.cnn_id }}/{{ table }}"
                                                           class="btn btn-xs btn-primary">Give Permissions</a>

                                                        <a href="/setting/table/remove_permission/{{ connection.cnn_user }}/{{ connection.cnn_id }}/{{ table }}"
                                                           class="btn btn-xs btn-primary">Remove Permissions</a>


                                                    </td>
                                                </tr>
                                            {% endfor %}

                                            </tbody>
                                        </table>
                                        <button type="submit" class="btn btn-sm btn-primary">Update Permissions
                                        </button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-4 -->
        </div>

    </div><!-- /.container -->

</div>
<!-- /#wrapper -->

{% include 'inc/footer.html.twig' %}
</body>

</html>
