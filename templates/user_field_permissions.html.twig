<!DOCTYPE html>
<html lang="en">

<head>
    {% include 'inc/header.html.twig' %}
    <title>SQLView - Dashboard</title>
</head>

<body>

{% include 'inc/nav.html.twig' with {'page': 'users'} %}

<div id="wrapper">

    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Connections
                        <div class="pull-right">
                            <a href="/setting/connection/new" type="button" class="btn btn-xs btn-primary"
                               aria-label="Left Align">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Connection
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <form method="post">
                                        <table class="table table-bordered table-hover table-striped">
                                            <thead>
                                            <tr>
                                                <th width="10">Permissions</th>
                                                <th>Connection</th>
                                                <th>Server</th>
                                                <th width="180">Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            {% for connection in connections %}
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" value=""
                                                               name="permissions[{{ connection.cnn_id }}]" id="">

                                                    </td>
                                                    <td>{{ connection.cnn_name }}</td>
                                                    <td>{{ connection.conn.cnn_host }}</td>
                                                    <td>
                                                        <a href="/setting/connection/edit/{{ connection.cnn_id }}"
                                                           class="btn btn-xs btn-primary">Edit</a>
                                                        <a href="/query/{{ connection.cnn_id }}"
                                                           class="btn btn-xs btn-primary">Query</a>
                                                        <a href="/setting/connection/remove/{{ connection.cnn_id }}"
                                                           class="btn btn-xs btn-danger">Remove</a>

                                                    </td>
                                                </tr>
                                            {% endfor %}

                                            </tbody>
                                        </table>
                                        <button type="submit" class="btn btn-sm btn-primary">Update Permissions
                                        </button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.col-lg-4 -->
        </div>

    </div><!-- /.container -->

</div>
<!-- /#wrapper -->

{% include 'inc/footer.html.twig' %}
</body>

</html>
